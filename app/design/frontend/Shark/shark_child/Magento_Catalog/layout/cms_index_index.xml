<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" template="Magento_Catalog::test/page_main_title.phtml"/>
            <block class="Magento\Cms\Block\Block" name="mg_homepage_pic">
                <arguments>
                    <argument name="block_id" xsi:type="string">mg_homepage_pic</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="leafs_block" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">leafs_block</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
